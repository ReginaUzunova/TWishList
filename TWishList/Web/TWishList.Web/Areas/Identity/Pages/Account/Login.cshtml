@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

        <div class="row">
            <div class="col-md-3 text-center">
                <section>
                    <h1 class="text-center">@ViewData["Title"]</h1>
                    <form id="account" method="post">
                        <div class="form-group">
                            <label asp-for="Input.Username" class="font-weight-bold"></label>
                            <input asp-for="Input.Username" class="form-control" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="font-weight-bold"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary font-weight-bold col-md-12">Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" class="text-dark font-weight-bold" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a class="text-dark font-weight-bold" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </section>
            
